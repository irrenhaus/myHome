<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.irrenhaus.myhome"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="HomeApplication">
        <activity android:name=".myHome"
                  android:label="@string/app_name"
                  android:launchMode="singleTask"
                  android:theme="@style/Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    

<activity android:name="WallpaperChanger" android:label="@string/wallpaper_changer_title"></activity>
<activity android:label="@string/prefs_title" android:name="Settings"></activity>
<service android:label="@string/wallpaper_changer_service_label" android:name="WallpaperChangerService"></service>
<activity android:name="GestureSettings" android:label="@string/prefs_gesture_settings"></activity>
</application>
    <uses-sdk android:minSdkVersion="4" />

<uses-permission android:name="android.permission.SET_WALLPAPER"></uses-permission>
<uses-permission android:name="android.permission.BIND_APPWIDGET"></uses-permission>
<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
</manifest> 